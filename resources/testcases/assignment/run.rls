@declare a(integer, integer, integer).
@declare b(integer, integer).

@declare r(integer, integer, integer, integer).

a(2, 4, 10).
b(3, 2).
b(5, 1).

% ?X = 2, ?Y = 4, ?T = 10, ?Z = 3
% ?R = (2 + 3) * 3 = 15
% ?S = 4 - 1 = 3
r(?R, 5, ?R, ?S) :- a(?X, ?Y, ?T), b(?Z, ?X), ?R := (?X + 3) * ?Z, ?S := ?Y - 1.

@output r.
